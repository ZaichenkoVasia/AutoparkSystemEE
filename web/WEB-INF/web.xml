<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AutoParkServlet</servlet-name>
        <servlet-class>project.controller.servlet.AutoParkServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AutoParkServlet</servlet-name>
        <url-pattern>/park</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/problem.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/problem.jsp</location>
    </error-page>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>project.controller.filter.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/park</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>EncodingUtfFilter</filter-name>
        <filter-class>project.controller.filter.EncodingUtfFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingUtfFilter</filter-name>
        <url-pattern>/park</url-pattern>
    </filter-mapping>

</web-app>

